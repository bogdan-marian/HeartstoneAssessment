<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/small_card_v1" />


    <TextView

        android:id="@+id/item_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/item_card_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_card_name"
        android:layout_toRightOf="@id/imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <TextView
        android:id="@+id/item_card_mechanics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_card_set"
        android:layout_toRightOf="@id/imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    <TextView
        android:id="@+id/item_card_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_card_mechanics"
        android:layout_toRightOf="@id/imageView"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


</RelativeLayout>


